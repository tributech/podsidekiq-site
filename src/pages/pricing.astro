---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";

const starterFeatures = [
  { feature: "Chrome web clipper", },
  { feature: "Basic Kanban board for topic management", },
  { feature: "Audience idea submissions", },
  { feature: "Runsheet and show notes templates", },
  { feature: "Up to 3 co-hosts", },
  { feature: "Basic analytics", },
  { feature: "Integration with social media (2 platforms)", },
  { feature: "Email support", },
  { feature: "5GB storage for files and attachments", },
];

const teamFeatures = [
  { feature: "All Starter plan features", },
  { feature: "Advanced Kanban board with custom stages", },
  { feature: "Audience Voting", },
  { feature: "Automated topic generation and prioritization", },
  { feature: "Customizable runsheet and show notes templates", },
  { feature: "Co-host role and guest permissions", },
  { feature: "Advanced analytics with audience insights", },
  { feature: "Integration with multiple social media platforms and podcast directories", },
  { feature: "Priority email and chat support", },
  { feature: "Unlimited storage for files and attachments", },
];

---

<Layout title="Pricing">
  <Container>
    <Sectionhead>
        <Fragment slot="highlight">An assistant for a fraction of the cost</Fragment>
        <Fragment slot="title">Plans & Pricing</Fragment>
        <Fragment slot="desc">
            We offer a free plan for those just starting out, and a team plan for those who are ready to take their content to the next level.
        </Fragment>
    </Sectionhead>
<section class="flex items-center justify-center mt-10 pb-10">
    <div class="p-4 sm:px-10 flex flex-col justify-center items-center text-base h-100vh mx-auto" id="pricing">
        <div class="isolate mx-auto grid max-w-md grid-cols-1 gap-8 lg:mx-0 lg:max-w-none lg:grid-cols-2">
            <div class="ring-1 ring-gray-200 rounded-3xl p-8 xl:p-10">
                <div class="flex items-center justify-between gap-x-4">
                    <h3 id="tier-standard" class="text-gray-900 text-2xl font-semibold leading-8">Starter</h3>
                </div>
                <p class="mt-4 text-base leading-6 text-gray-600">For podcast and streams just starting out</p>
                <p class="mt-6 flex items-baseline gap-x-1">
                    <span class="line-through text-2xl font-sans text-gray-500/70">$9</span><span
                        class="text-5xl font-bold tracking-tight text-gray-900">Free</span>
                </p>
                <a href="/contact"
                    aria-describedby="tier-standard"
                    class="text-blue-600 ring-1 ring-inset ring-blue-200 hover:ring-blue-300 mt-6 block rounded-md py-2 px-3 text-center text-base font-medium leading-6 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600"
                    >Sign up</a>
                <ul role="list" class="mt-8 space-y-3 text-sm leading-6 text-gray-600 xl:mt-10">
                    {
                        starterFeatures.map((item) => (
                        <li class="flex gap-x-3 text-base">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                stroke="currentColor" aria-hidden="true" class="h-6 w-5 flex-none text-blue-600">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>{item.feature}
                        </li>
                        ))
                      }
                </ul>
            </div>
            <div class="ring-2 ring-pink-600 rounded-3xl p-8 xl:p-10">
                <div class="flex items-center justify-between gap-x-4">
                    <h3 id="tier-extended" class="text-pink-600 text-2xl font-semibold leading-8">Team</h3>
                    <p class="rounded-full bg-pink-600/10 px-2.5 py-1 text-xs font-semibold leading-5 text-pink-600">
                        Most popular</p>
                </div>
                <p class="mt-4 text-base leading-6 text-gray-600">Growing and established teams</p>
                <p class="mt-6 flex items-baseline gap-x-1">
                    <span class="line-through text-2xl font-sans text-gray-500/70">$59</span><span
                        class="text-5xl font-bold tracking-tight text-gray-900">$29</span>
                </p>
                <a href="/contact"
                    aria-describedby="tier-extended"
                    class="bg-pink-600 text-white shadow-sm hover:bg-pink-800 mt-6 block rounded-md py-2 px-3 text-center text-base font-medium leading-6 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600"
                    >Sign up</a>
                <ul role="list" class="mt-8 space-y-3 text-sm leading-6 text-gray-600 xl:mt-10">
                    {
                        teamFeatures.map((item) => (
                        <li class="flex gap-x-3 text-base">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                stroke="currentColor" aria-hidden="true" class="h-6 w-5 flex-none text-pink-600">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>{item.feature}
                        </li>
                        ))
                      }
                </ul>
            </div>
        </div>
    </div>
</section>
  </Container>
</Layout>

---
import Link from "./ui/link.astro";
---

<section class="py-10 lg:py-[60px] mx-4">
  <div class="relative z-10 px-8 py-12 overflow-hidden rounded bg-pink md:py-20">
    <div class="flex">
      <div class="w-full px-4">
        <div class="mx-auto max-w-[570px] text-center">
          <span class="block mb-4 text-base font-medium text-white">
            Supercharge Your Podcast!
          </span>
          <h2
            class="mb-5 text-3xl font-bold leading-tight text-white md:text-[40px]/[48px]"
          >
          Set your brain free to think and create 
        </h2>
          <p class="mb-8 text-base leading-relaxed text-white md:px-5">
            PodSidekiq does the rest - Try us out today ☀️
          </p>
          <a
            href="/contact"
            class="inline-block py-4 text-base font-medium transition bg-white rounded-md px-7 text-primary hover:bg-opacity-90"
          >
            Free Trial
          </a>
        </div>
      </div>
    </div>

    <div class="hidden md:block">
      <span class="absolute top-0 left-0 z-[-1]">
        <svg
          width="156"
          height="343"
          viewBox="0 0 156 343"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <rect
            x="-213"
            y="175.925"
            width="352.265"
            height="175.956"
            rx="37"
            transform="rotate(-47.3095 -213 175.925)"
            fill="#eabd08"
          />

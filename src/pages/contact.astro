---
import Contactform from "@components/contactform.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import { Icon } from 'astro-icon/components';
---

<Layout title="Contact Us">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact Us</Fragment>
    </Sectionhead>
<!-- ====== Forms Section Start -->
<section class="relative z-10 bg-white dark:bg-dark">
  <div class="container mx-auto">
    <div class="overflow-hidden rounded-xl bg-[#F0F4FF] dark:bg-dark-2">
      <div class="flex flex-wrap">
        <div class="w-full px-4 lg:w-1/2">
          <div class="relative z-10 px-8 py-10 lg:pb-24">
            <h2
              class="mb-6 text-3xl font-semibold text-white sm:text-4xl md:text-[40px]/[48px]"
            >
            Thanks for your <br/> interest üôèüèº
            </h2>
            <p class="max-w-[300px] my-2 text-base text-white">
              We haven't quite launched our product yet. However we are very interested to hear from those that find our offer intriguing.</p>
              <p class="max-w-[300px] text-base text-white">Please contact us via the form below and we'd love to show you what we are building</p>
            
            <div>
              <span class="absolute left-0 top-0 z-[-1]">
                <svg
                  width="585"
                  height="400"
                  viewBox="0 0 585 400"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d="M585 -6H0V400C168.393 400 570.581 310.231 585 -6Z"
                    fill="#db2979"
                  />
                </svg>
              </span>
              <span class="absolute left-0 bottom-0 z-[-2]">
                <svg
                  width="392"
                  height="189"
                  viewBox="0 0 392 189"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d="M391.516 189H0V28C301.088 -64.8 386.464 96.6667 391.516 189Z"
                    fill="#eabd08"
                  />
                </svg>
              </span>
            </div>
          </div>
        </div>
        <div class="self-center w-full px-4 lg:w-1/2">
          <div class="relative z-10 px-6">
            <Contactform />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
  </Container>
</Layout>
